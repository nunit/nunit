<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\Common.props" />
  <PropertyGroup>
    <TargetFrameworks>net20;net35;net40;net45;netstandard1.6;netstandard2.0</TargetFrameworks>
    <RootNamespace>NUnit.Framework</RootNamespace>
    <DocumentationFile>$(OutputPath)\$(TargetFramework)\nunit.framework.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="ApiContractGenerator.MSBuild" Version="1.0.0" PrivateAssets="all" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net20'">
    <PackageReference Include="NUnit.System.Linq" Version="0.6.0" />
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFrameworkIdentifier)' == '.NETFramework'">
    <Reference Include="System.Web" />
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>

  <ItemGroup>
    <ApiContractAssembly Include="$(TargetPath)" OutputPath="..\externalshape\%(Filename).$(TargetFramework).shape.cs" />
    <ApiContractIgnoredNamespace Include="NUnit.Framework.Internal" />
  </ItemGroup>

</Project>

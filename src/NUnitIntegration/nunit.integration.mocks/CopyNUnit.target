<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" DefaultTargets="CopyNUnitConsoleFiles" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <ItemGroup>
    <NUnitConsoleFiles Include="$(BaseOutputPath)\nunit-console.exe;$(BaseOutputPath)\nunit-agent.exe;$(BaseOutputPath)\nunit.engine.dll;$(BaseOutputPath)\nunit.engine.api.dll;$(BaseOutputPath)\Mono.Addins.dll" />    
  </ItemGroup>
  <Target Name="CopyNUnitConsoleFiles">
    <Copy SourceFiles="@(NUnitConsoleFiles)" DestinationFolder="$(OutputPath)" />
  </Target>
</Project>